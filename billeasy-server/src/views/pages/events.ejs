<%- include('../partials/head', { title }) %>
<%- include('../partials/header', { title }) %>

<main>
  <section class="page-header">
    <div class="container">
      <h1>Events</h1>
      <p>Loaded from /api/events with search/filter.</p>
    </div>
  </section>

  <section class="controls">
    <div class="container controls-grid">
      <div>
        <label for="event-search">Search</label>
        <input id="event-search" type="search" placeholder="Search events...">
      </div>
      <div>
        <label for="month-filter">Month</label>
        <select id="month-filter">
          <option value="all">All</option>
          <option value="01">January</option>
          <option value="02">February</option>
          <option value="03">March</option>
          <option value="04">April</option>
          <option value="05">May</option>
          <option value="06">June</option>
          <option value="07">July</option>
          <option value="08">August</option>
          <option value="09">September</option>
          <option value="10">October</option>
          <option value="11">November</option>
          <option value="12">December</option>
        </select>
      </div>
    </div>
  </section>

  <section class="container">
    <div id="event-list" class="list"></div>
    <p id="event-empty" class="muted hidden">No events found.</p>
  </section>
</main>

<script src="/assets/js/events.js" defer></script>
<%- include('../partials/footer') %>