<main class="container">
  <h1>Welcome</h1>
  <p>This EJS view is loaded successfully.</p>

  <!-- INSERT: Dashboard KPIs + links to inner pages -->
  <section class="grid" style="display:grid;gap:1rem;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));margin-top:1rem">
    <div id="card-new-users" class="card" style="padding:1rem;border:1px solid #e5e7eb;border-radius:8px">
